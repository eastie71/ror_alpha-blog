<h1 class="action-heading center">All Bloggers</h1>
<div class="apple_pagination">
	<%= will_paginate @users %>
</div>
<% @users.each do |user| %>
	<div class="card text-center card-adjust w-75 mx-auto">
		<div class="card-body">
			<p><%= link_to gravatar_for(user), user_path(user), class: "center" %></p>
			<h4><%= link_to user.username.gsub(/\w{2,}\b/) { |word| word.capitalize }, user_path(user), class: "center" %></h4>
			<div class="text-muted"><%= pluralize(user.articles.count, "article") if user.articles %></div>
		</div>
	</div>
<% end %>
<div class="apple_pagination">
	<%= will_paginate @users %>
</div>