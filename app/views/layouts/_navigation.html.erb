<nav class="navbar navbar-expand-lg navbar-adjust">
  <%= link_to "Alpha Blog", root_path, class: "navbar-brand", id: "main-logo" %>
  <button class="navbar-toggler navbar-toggler-icon" id="navbar-menu-adjust" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "Articles", articles_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Bloggers", users_path, class: "nav-link" %>
      </li>
      <% if logged_in? %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Actions
          </a>
          <div class="dropdown-menu dropdown-adjust" aria-labelledby="navbarDropdown">
            <%= link_to "Create New Article", new_article_path, class: "dropdown-item" %>
          </div>
        </li>
      <% end %>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Categories
        </a>
        <div class="dropdown-menu dropdown-adjust" aria-labelledby="navbarDropdown">
          <%= link_to "All Categories", categories_path, class: "dropdown-item" %>
          <% if logged_in? && current_user.admin? %>
            <div class="dropdown-divider"></div>
            <%= link_to "Create New Category", new_category_path, class: "dropdown-item" %>
          <% end %>
        </div>
      </li>
    </ul>
    <ul class="navbar-nav">
      <% if logged_in? %>
          <li class="nav-item">
            <%= link_to "Logout", logout_path, method: :delete, class: "nav-link nav-link-adjust" %>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Account<%= " (Admin)" if current_user.admin? %>
            </a>
            <div class="dropdown-menu dropdown-menu-right dropdown-adjust" aria-labelledby="navbarDropdown">
              <%= link_to "Your Account", user_path(current_user), class: "dropdown-item" %>
              <%= link_to "Edit Account", edit_user_path(current_user), class: "dropdown-item" %>
            </div>
          </li>
      <% else %>
          <li class="nav-item">
            <%= link_to "Sign Up", signup_path, class: "nav-link nav-link-adjust" %>
          </li>
          <li class="nav-item">
            <%= link_to "Login", login_path, class: "nav-link nav-link-adjust" %>
          </li>
      <% end %>
    </ul>
  </div>
</nav>